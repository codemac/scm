;; config.scm.in -- Making information accessible in -*- scheme -*- code.

(define-module (shepherd config)
  #:export (Version
            Prefix-dir
            %localstatedir
            %sysconfdir
            copyright
            bug-address
            package-name
            package-url))

(define Version "%VERSION%")
(define Prefix-dir "%PREFIX%")
(define %localstatedir "%localstatedir%")
(define %sysconfdir "%sysconfdir%")

(define copyright "Copyright (C) 2002, 2003 Wolfgang Jährling")
(define bug-address "%PACKAGE_BUGREPORT%")
(define package-name "%PACKAGE_NAME%")
(define package-url "%PACKAGE_URL%")
